{
  "name": "waitme",
  "displayName": "WaitMe",
  "description": "AI 对话交互拦截工具，让交流持续到底",
  "version": "0.0.1",
  "publisher": "imhuso",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "waitme.copyMcpConfig",
        "title": "WaitMe: Copy MCP Configuration"
      },
      {
        "command": "waitme.copyPrompt",
        "title": "WaitMe: Copy Reference Prompt"
      },
      {
        "command": "waitme.openSettings",
        "title": "WaitMe: Open Settings"
      },
      {
        "command": "waitme.startServer",
        "title": "WaitMe: Start Server"
      },
      {
        "command": "waitme.stopServer",
        "title": "WaitMe: Stop Server"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "waitme",
          "title": "WaitMe",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "waitme": [
        {
          "type": "webview",
          "id": "waitme.mainView",
          "name": "WaitMe"
        }
      ]
    },
    "configuration": {
      "title": "WaitMe",
      "properties": {
        "waitme.theme": {
          "type": "string",
          "default": "system",
          "enum": ["system", "light", "dark"],
          "enumDescriptions": [
            "跟随系统主题",
            "浅色主题",
            "深色主题"
          ],
          "description": "界面主题"
        },
        "waitme.showToast": {
          "type": "boolean",
          "default": true,
          "description": "新请求时显示 Toast 提示"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "pnpm run build:extension && pnpm run build:webview && pnpm run build:mcp && pnpm run build:server",
    "build:extension": "npx esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "build:webview": "cd webview && pnpm run build",
    "build:mcp": "npx esbuild src/mcp/server.ts --bundle --outfile=dist/mcp-server.js --format=cjs --platform=node",
    "build:server": "npx esbuild src/mcp/standalone-server.ts --bundle --outfile=dist/standalone-server.js --format=cjs --platform=node",
    "server": "node dist/standalone-server.js",
    "watch": "pnpm run build:extension -- --watch",
    "dev": "pnpm run watch",
    "package": "pnpm run build && npx @vscode/vsce package --no-dependencies --allow-missing-repository"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.85.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "uuid": "^9.0.0"
  }
}
